# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SCOPES=write_products,read_products,write_discounts,read_discounts,write_orders,read_orders,write_themes,read_themes
SHOPIFY_APP_URL=https://localhost:3000

# Database Configuration
# Railway PostgreSQL (рекомендовано)
DATABASE_URL=postgresql://postgres:password@hostname:port/database_name

# Alternative Database URLs
# Local Docker PostgreSQL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5434/funnel_dev

# Local SQLite (if needed):
# DATABASE_URL=file:./dev.db

# Optional: Custom shop domain (if using custom domains)
# SHOP_CUSTOM_DOMAIN=your-custom-domain.com

# Optional: Frontend port (for Vite)
# PORT=3000

# Environment (important for Docker)
NODE_ENV=development
# For Docker production: NODE_ENV=production
